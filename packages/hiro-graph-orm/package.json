{
  "name": "hiro-graph-orm",
  "version": "0.0.4-0",
  "description": "OGIT ontology to sane application mappings",
  "repository": "arago/hiro-graph-js",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib/* && babel src/ --out-dir lib/ --source-maps",
    "doc:clean": "rm -rf esdocs/",
    "doc:build": "npm run doc:clean && esdoc -c esdoc.json",
    "doc:serve": "static --host-address 0 --port 7000 esdocs/",
    "doc": "[ ! -f esdocs/index.html ] && npm run doc:build; npm run doc:serve",
    "lint": "eslint src/",
    "prepublish": "npm run build",
    "test": "jest --silent",
    "watch": "babel --watch src/ --out-dir lib/"
  },
  "license": "MIT",
  "dependencies": {
    "hiro-graph-client": "^0.1.0",
    "hiro-graph-codecs": "^0.1.0",
    "hiro-graph-gremlin": "^0.1.0",
    "hiro-graph-lucene": "^0.1.0",
    "lodash.isplainobject": "^4.0.4"
  },
  "devDependencies": {
    "@arago/eslint-config-arago": "github:arago/eslint-config-arago",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "esdoc": "^0.4.7",
    "esdoc-importpath-plugin": "0.0.1",
    "eslint": "^2.10.2",
    "jest": "^20.0.4",
    "node-static": "^0.7.7",
    "source-map-support": "^0.4.0"
  },
  "eslintConfig": {
    "extends": [
      "@arago/eslint-config-arago"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "sourceMaps": true,
    "env": {
      "production": {
        "sourceMaps": false
      }
    }
  }
}
