{
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@arago/eslint-config-arago": "github:arago/eslint-config-arago",
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "husky": "^0.13.3",
    "lerna": "^2.0.0-rc.5",
    "lint-staged": "^3.5.0",
    "prettier": "^1.3.1"
  },
  "scripts": {
    "lerna": "lerna",
    "test": "lerna bootstrap --yes && lerna run test",
    "publish": "lerna publish",
    "format": "prettier --tab-width=4 --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "lint": "eslint",
    "start-again": "lerna clean --yes && lerna exec 'rm -f package-lock.json' && lerna bootstrap"
  },
  "lint-staged": {
    "*.js": [
      "prettier --tab-width=4 --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "@arago/eslint-config-arago",
    "globals": {
      "__DEV__": true
    }
  }
}
